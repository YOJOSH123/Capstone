@page
@model JN_Gamebase.Pages.GameSelectedModel
@{
    ViewData["Title"] = "GameSelected";
}

<h2>Game Selected</h2>

<div class="selected-form">
    <div class="selected-inner">
        <input type="text" placeholder="Title" />
    </div>
    <div class="selected-inner">
        <input type="text" placeholder="Developer" />
    </div>
    <div class="selected-inner">
        <input type="text" placeholder="Genre" />
    </div>
    <div class="selected-inner">
        <input type="text" placeholder="Rating (E/E+/T/M)" />
    </div>
    <div class="selected-inner">
        <input type="text" placeholder="Series" />
    </div>
    <div class="selected-inner">
        <input type="text" placeholder="Price" />
    </div>
    <div class="selected-inner">
        <input type="text" placeholder="Release Date" />
    </div>

    <div class="selected-inner">
        <button type="submit" class="button-update-game">Update</button>
    </div>

    <div class="selected-inner">
        <button type="submit" class="button-delete-game">Delete</button>
    </div>

    <div class="add-tiny">
        <textarea>
            About the game
        </textarea>
        <script>
            tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
            });
        </script>
    </div>
    <button type="submit" class="button-add-review">Add Review</button>
</div>





